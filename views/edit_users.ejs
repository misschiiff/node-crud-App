    <div class="container">
        <div class="row">
            <div class="col-lg-6 mx-auto mt-6">
                <div class="card shadow">
                    <div class="card-header bg-success">
                        <h3 class="text-light">Edit User(<%= user.name %>)</h3>
                    </div>
                    <div class="card-body p-4">
                        <form action="/update/<%= user._id %>" method="post" id="add-form" enctype="multipart/form-data">
                            <div class="mb-3">
                                <label for="name">Name</label>
                                <input type="text" name="name" class="form-control form-control-lg" 
                                placeholder="Enter your name" value="<%= user.name %>" required/>
                            </div>

                            <div class="mb-3">
                                <label for="email">Email</label>
                                <input type="email" name="email" class="form-control form-control-lg" 
                                placeholder="Enter your email" value="<%= user.email %>" required/>
                            </div>

                            <div class="mb-3">
                                <label for="phone"> Phone</label>
                                <input type="tel" name="phone" class="form-control form-control-lg"
                                 placeholder="Enter your phone number"  value="<%= user.phone %>" required/>
                            </div>

                            <!-- <div class="mb-3">
                                <label for="image">  Image</label>
                                <input type="file" name="image" class="form-control form-control-lg" required/>
                            </div> -->

                            <div class="mb-3">
                                <label for="name"> Add user</label>
                                <input type="submit" name="submit" value="add User" class="btn btn-succcess btn-lg"/>
                            </div>
                            <input type="submit" name="submit"  value="Update User" class="btn btn-success btn-lg">

                        </form>
               
                    </div>
                </div>
                
            </div>
        </div>
